<div class = "container">
 <h2>Meme Generator </h2>
<div class = "row well"> 
   <!-- Meme DIV -->
    <div class = "col-md-6">
      <canvas id= "memeCanvas"  class= "canvas__canvas" style = "height:100%; width:100%; border:1px solid black; background-color:white;">  
        Your browser does not support the CANVAS element.
                Try the latest Firefox, Google Chrome, Safari or Opera.
      </canvas>
    </div>
  <!-- toolbar DIV -->
  <div class = "col-md-6">
    <div>
      <button class = "btn-primary btn-lg" id = "downloadMeme" style = "margin:5px;">
          <a id="downloadLnk" download="YourFileName.jpg" style = 'color:white;'>Download Meme</a></button>
      <button class = "btn-lg btn-info" style = "margin:5px;" ><%= link_to 'See All Pictures', memes_all_path, :class => 'railsLink' %></button>
    </div>
 
      <h5>File Name: </h5>
      <input type="text" name="tLine" id = 'fileName'>
    <br>

    <!-- Add Text Div -->
    <h4 id = "addText" class = "panel panel-heading">Add Text</h4>
    <div id = "addTextHolder" class = "collapse">
      Top Line:<br><input type="text" name="tLine" id = 'tLine'><br><br>
      Button Line:<br> <input type="text" name="bLine" id = 'bLine'><br>
     </div>
      
    <!-- Add Font Color Div -->
    <h4 id = "fontColor" class = "panel panel-heading">Font Size & Color</h4>
    <div id = "fontColorHolder" class = "collapse">
         Font Size:
         <select>
           <% n = 24 %>
           <% 10.times do %>
             <option value = "<%= n%>"><%= n%></option>
         <% n = n + 2%>
           <%end%>
         </select><br>
         <form>
          <br>Color:<br>
          <input type="radio" name = "color" id = "colorO" class= "radioColor" checked> Orange<br>
          <input type="radio" name = "color" id = "colorR"  class= "radioColor"  > Red<br>
          <input type="radio" name = "color" id = "colorG"  class= "radioColor" > Green<br>
          <input type="radio" name = "color" id = "colorW"  class= "radioColor" > White<br>
        </form>
    </div>

    <!-- Move Text Div -->
    <h4 id = "textBoxes" class = "panel panel-heading">Move Text Boxes</h4>
    <div id = "textBoxHolder" class = "collapse">
      <h5>Move Top Text Box </h5>
      <table class= "table">
        <tr>
          <td><button id = "tMoveUp">UP</button></td><td></td>
          <td><button id = "tMoveDown">DOWN</button></td>
        </tr>
        <tr>
          <td><button id = "tMoveLeft">LEFT</button></td><td></td>
          <td><button id = "tMoveRight">RIGHT</button></td>
        </tr>
      </table>
      
      <h5>Move Bottom Text Box </h5>
      <table class= "table">
        <tr>
          <td><button id = "bMoveUp">UP</button></td>
          <td><button id = "bMoveDown">DOWN</button></td>
        </tr>
        <tr>
          <td><button id = "bMoveLeft">LEFT</button></td>
          <td><button id = "bMoveRight">RIGHT</button></td>
        </tr>
      </table>
    </div>
  </div>
</div>
 
  <%= render 'picture_header' %>  
 
</div>

<script type = "text/javascript" src = "/memeGenerator.js"></script>
<script>
  $(document).ready(function(){
   $("#addText").on("click", function(){
      $("#addTextHolder").toggleClass("collapse");
      });

    $("#fontColor").on("click", function(){
      $("#fontColorHolder").toggleClass("collapse");
      });

     $("#textBoxes").on("click", function(){
      $("#textBoxHolder").toggleClass("collapse");
      });
 });
</script>