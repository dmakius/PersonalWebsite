  .table th, .table td { 
     border-top: none !important; 
     width:50%;

 }
</style>

<script>
  $(document).ready(function(){
   $("#addText").on("click", function(){
      $("#addTextHolder").toggleClass("collapse");
      });

    $("#fontColor").on("click", function(){
      $("#fontColorHolder").toggleClass("collapse");
      });

    $("#textBoxes").on("click", function(){
      $("#textBoxHolder").toggleClass("collapse");
    });

                
    $('#slider1').Thumbelina({
      $bwdBut:$('#slider1 .left'),    // Selector to left button.
      $fwdBut:$('#slider1 .right')    // Selector to right button.
    });            
 });
