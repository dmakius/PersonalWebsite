<h2>Asteroids 2</h2>
<div id = "asteroidsGame"></div>

<%if mobile_device? %>
	<%= render("onscreenController2") %>
	<script src = "/Games/asteroids2/asteroidsController.js"></script>
<% end %>
<script>
  var Asteroids = Asteroids || {};
  Asteroids.game = new Phaser.Game(430, 300, Phaser.AUTO, 'asteroidsGame');
  Asteroids.game.state.add('BootState', Asteroids.BootState);
  Asteroids.game.state.add('PreloadState', Asteroids.PreloadState);
  Asteroids.game.state.add('MenuState', Asteroids.MenuState);
  Asteroids.game.state.add('GameState', Asteroids.GameState);
  Asteroids.game.state.start('BootState');
</script>
