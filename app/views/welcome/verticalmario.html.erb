<style>#marioGame{margin-top:25px;} #marioGame canvas {display : block;   margin : auto;}</style>

<script  type='text/javascript' src = "/Games/verticalMario/phaser.min.js"></script>
<script  type='text/javascript' src = "/Games/verticalMario/bootState.js"></script>
<script  type='text/javascript' src = "/Games/verticalMario/preloadState.js"></script>
<script  type='text/javascript' src = "/Games/verticalMario/gameState.js"></script>

<div class = "row">

	<div class = "col-md-12">
	<h2>Vertical Mario</h2>
		<div id = "marioGame"></div>
	</div>
</div>

<script>
	window.onload = function(){
		var game = new Phaser.Game(450, 400, Phaser.CANVAS, 'marioGame');

		game.state.add('bootState', Game.bootState);
		game.state.add('preloadState', Game.preloadState);
		game.state.add('gameState', Game.gameState);
		game.state.start('bootState');
	}
</script>