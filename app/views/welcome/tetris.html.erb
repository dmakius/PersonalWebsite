<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"> 
<style>
#nextPeice{
	float:left;	
	margin-top:-50px;
}
#tetris{
	display:block;
	margin:auto;
}
#score{
	margin-left:auto;
	margin-right:auto;
}

.glyphicon {font-size: 40px;}

body { -webkit-touch-callout: none !important; }
a { -webkit-user-select: none !important; }

</style>
<br>
<!-- tetris game -->
<%if mobile_device? %>
	<div class = "row" style = "margin-bottom:10px;">
		<div class = "col-xs-1"></div>
		<div class = "col-xs-10">
			<div style = "float:left;"><strong>SCORE: </strong><span id ="score"></span></div>
			<div style = "float:right;"><strong>LEVEL: </strong><span id ="level"></span></div>
			<div style = "display:none;">		
				<canvas id ="nextPeice" width= "75" height ="75" style = "margin-top:15px;"></canvas>
			</div>
		</div>
		<div class = "col-xs-1"></div>
	</div>	
		
	<div class = "row">
		<div class = "col-xs-1 col-sm-1"></div>
		<div class = "col-xs-10 col-sm-10">
			<canvas id = "tetris" class='img-responsive' width = "240" height = "400" style = "display:block; margin:auto;">
		</canvas>
		</div>
		<div class = "col-xs-1 col-sm-1"></div>
	</div>
		<%= render "onscreenController" %>
		<script src = "/Games/tetris/tetris.js"></script>
		<script src = "/Games/tetris/tetrisController.js"></script>
	<% else %>
		<div class = "row"> 
			<div id = "tetris-holder" class = "col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3">
				<div class = "hidden-xs" style ="margin-top:15px; width:100px; float:left;">
					<div><strong>LEVEL:</strong><div id ="level"></div></div><br>
					<div><strong>SCORE:</strong><div id ="score"></div></div>
					<div><h4>Next Peice</h4><canvas id ="nextPeice" width= "75" height ="75" style = "margin-top:15px;"></canvas></div>
				</div>
				<div>
					<canvas id = "tetris" class='img-responsive' width = "240" height = "400" style = "float:left; padding-left:10px; padding-top:10px; padding-bottom:10px;"></canvas>
					<script src = "/Games/tetris/tetris.js"></script>
				</div>
			</div>
		</div>
	<%end%>

