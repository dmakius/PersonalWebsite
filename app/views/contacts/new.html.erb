<h1>Contact</h1>
<div class = "" >

<%= form_for @contact do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name, required: true %>
	<br>

	<%= f.label :email %><br>
	<%= f.email_field :email, required: true %>
	<br>

	<%= f.label :message %><br>
	<%= f.text_area :message, as: :text %>
	<br>

	<div class = "hidden">
	<%= f.label :nickname %><br>
	<%= f.text_field :nickname, hint: "Do Not Fill Out" %>
	<br>
	</div>
	<br>
	<%= f.submit 'Send Message'%>
<% end %>

</div>
