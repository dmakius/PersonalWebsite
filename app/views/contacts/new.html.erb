<h1>Contact</h1>
<div>

<%= form_for @contact do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name, required: true, :class => "form-control" %>
	<br>

	<%= f.label :email %><br>
	<%= f.email_field :email, required: true, :class => "form-control" %>
	<br>

	<%= f.label :message %><br>
	<%= f.text_area :message, as: :text , :size => "35" ,:class => "form-control", :style=>"height:150px;"%>
	<br>

	<div style = "display:none">

	<%= f.label :nickname %><br>
	<%= f.text_field :nickname, hint: "Do Not Fill Out" %>

	</div>

	<%= f.submit 'Send Message' ,:class => "btn btn-primary"%>
<% end %>

</div>
