<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<% @post.each do |post| %>
<div class = post>
	<tr>
	<td><h2><%= link_to post.title, post%></h2></td>
	<td><p><small>Category:<%= %></small></p></td>
	<td><p><%= post.body%></p></td>
	
	<td><%= link_to "Show", post_path(post) %></td>
	<td><%= link_to "Edit", edit_post_path(post) %></td>
	<td><%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this post?' } %></td>
	<hr>
</div><br>
<%end%>